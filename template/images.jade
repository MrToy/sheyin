extends index
block footer
append style
	style
		:stylus
			html
				filter:none
			body
				background:none
			.header
				padding:2em 5%;animation:rotateIn 2.0s ease;position:fixed;z-index:10;width:90%
			#ui
				.section
					background-size:100% 100%;
					.movetop
						transform:translateY(-50px)
					.movebottom
						transform:translateY(50px)
			#p1
				background:url(a2.jpg)
				img
					height:70px;animation:fadeIn 2.0s ease
			#p2
				background:url(a1.jpg)
			#p3
				background:url(a4.jpg)
			#p4
				background:url(a3.jpg)
block content
	#ui
		.section#p1
			img(src="text1.png")
		a.section#p2(href="/wanshu.html")
			.movetop
				img(src="text2.png")
		a.section#p3(href="/nanfeng.html")
			img(src="text3.png")
		a.section#p4(href="/jixieshi.html")
			.movebottom
				img(src="text4.png")
	script(src="images.js")